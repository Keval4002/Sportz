# =============================================================================
# Castly Frontend Environment Variables
# =============================================================================
# Copy this file to .env and adjust values for your environment

# -----------------------------------------------------------------------------
# Application Mode
# -----------------------------------------------------------------------------

# SIMULATION_MODE: Run in pure offline simulation mode (no backend required)
# - true: Pure offline simulation with mock data
# - false: Connect to real backend
VITE_SIMULATION_MODE=false

# AUGMENT_MODE: Augment backend data with simulated events (requires SIMULATION_MODE=false)
# - true: Real backend + simulated events/augmentation
# - false: Raw backend data only, no augmentation
VITE_AUGMENT_MODE=true

# -----------------------------------------------------------------------------
# Backend Connection
# -----------------------------------------------------------------------------

# Backend API base URL
# For development: http://localhost:8000
# For production: https://castly-hdf3.onrender.com
VITE_BACKEND_URL=http://localhost:8000

# API base path (usually /api for proxied requests)
VITE_API_BASE=/api

# -----------------------------------------------------------------------------
# Development Server (used by vite.config.ts)
# -----------------------------------------------------------------------------

# Development server port
VITE_DEV_PORT=3000
